<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/rateus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Rate Us"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/josefinsans_bold"
            />

        <TextView
            android:id="@+id/rateus_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="If you like Spoken English Improviser, please give us some stars."
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/josefinsans_regular"
            />

        <Button
            android:id="@+id/rateus_rateus_btn"
            android:background="@drawable/circular_btn_shape"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_semibold"
            android:text="Rate us, Motivate Us"/>

        <Button
            android:id="@+id/rateus_later_btn"
            android:background="@drawable/circular_btn_shape"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#616161"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_semibold"
            android:text="Remind me later"/>

        <Button
            android:id="@+id/rateus_never_btn"
            android:background="@drawable/circular_btn_shape"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#616161"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/josefinsans_semibold"
            android:text="Don't show again"/>



    </LinearLayout>

</android.support.v7.widget.CardView>