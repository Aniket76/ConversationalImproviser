                            android:textColor="@color/txtColor3"
                            android:fontFamily="@font/josefinsans_bold"
                            android:text="Example 5"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/josefinsans_semibold"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp"
                        android:text="Dialogues"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorPrimary"/>



                            <TextView
                                android:id="@+id/patterns_dia1_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/txtColor1"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Dialogue 1"
                                android:layout_marginBottom="8dp"
                                />



                            <TextView
                                android:id="@+id/patterns_dia2_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/txtColor2"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Dialogue 2"
                                android:layout_marginBottom="4dp"
                                />

                    <View
                        android:id="@+id/pattern_view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
