                                android:textSize="18sp"
                                android:textColor="@color/txtColor2"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Dialogue 6"
                                android:layout_marginBottom="4dp"
                                />

                    <View
                        android:id="@+id/pattern_view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/colorAccent"/>




                            <TextView
                                android:id="@+id/patterns_dia7_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/txtColor1"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Dialogue 7"
                                android:layout_marginBottom="8dp"
                                />




                            <TextView
                                android:id="@+id/patterns_dia8_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/txtColor2"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Dialogue 8"
                                android:layout_marginBottom="4dp"
                                />

                    <View
                        android:id="@+id/pattern_view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/colorAccent"/>


                    </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

